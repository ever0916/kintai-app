<%= form_for(@kintai,:html => { :class => "form-horizontal" } ) do |f| %>
  <% if @kintai.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@kintai.errors.count, "error") %> prohibited this kintai from being saved:</h2>

      <ul>
      <% @kintai.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.number_field :user_id,:value => current_user.id,:class => "hidden" %>

  <div class="form-group">
    <%= f.label "時間入力",:class => "control-label col-xs-2" %>
    <div class="col-xs-1">
      <%= sprintf((
        f.datetime_select :t_kintai,
        :use_month_numbers => true,
        :include_blank => false,
        :class => "input-sm form-control",
        :date_separator => '%s',
        :datetime_separator => '</div><div class="pull-left">日</div><div class="col-xs-1">',
        :time_separator => '</div><div class="pull-left">時</div><div class="col-xs-1">'
      )+ '</div><div class="pull-left">分</div>', '</div><div class="pull-left">年</div><div class="col-xs-1">', '</div><div class="pull-left">月</div><div class="col-xs-1">').html_safe %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <% if current_user.f_state %>
        <%= f.submit '退勤',:class => "btn btn-primary" %>
      <% else %>
        <%= f.submit '出勤',:class => "btn btn-warning" %>
      <% end %>
    </div>
  </div>
<% end %>
