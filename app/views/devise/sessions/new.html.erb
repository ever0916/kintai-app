<h2>ログイン</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html =>{ :class => "form-horizontal"} ) do |f| %>
  <div class="form-group">
    <%= f.label :email.to_s+"：", :class => "control-label col-xs-2" %>
    <div class="col-xs-4">
      <%= f.email_field :email, :autofocus => true, :class => "form-control imput-sm" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password.to_s+"：", :class => "control-label col-xs-2" %>
    <div class="col-xs-4">
      <%= f.password_field :password, :autofocus => true, :class => "form-control imput-sm" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-2">
    </div>
    <div class="col-xs-4">
      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-6">
      <%= f.submit "ログイン",:class => "btn btn-primary" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>


