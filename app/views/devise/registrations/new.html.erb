<h2>社員登録</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name.to_s+"：",:class => "control-label col-xs-2" %>
    <div class="col-xs-4">
      <%= f.text_field :name, :autofocus => true,:class => "form-control input-sm" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email.to_s+"：",:class => "control-label col-xs-2" %>
    <div class="col-xs-4">
      <%= f.email_field :email,:class => "form-control input-sm" %>
    </div>
  </div>

  <%= f.password_field :password, :class => "hidden", :value => "password" %>
  <%= f.password_field :password_confirmation,:class => "hidden", :value => "password" %>

  <div class="form-group">
    <div class="col-xs-6">
      <%= f.submit "登録", :class => "btn btn-primary" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>


